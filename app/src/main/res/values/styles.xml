<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style used for the TextInputLayouts in the Main Activity -->
    <style name="MainActivityTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/sixty_four_margin</item>
        <item name="android:layout_marginRight">@dimen/sixty_four_margin</item>
        <item name="android:layout_marginTop">@dimen/eight_margin</item>
    </style>

    <!-- Style used for EditText in the Main Activity -->
    <style name="MainActivityEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/eight_margin</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
